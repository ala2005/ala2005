{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "lib": ["es6", "DOM"],
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./dist",
        "declaration": true,
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/*.spec.ts"
    ]
}
